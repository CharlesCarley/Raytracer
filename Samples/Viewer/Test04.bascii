# ------------------------------------------------------------
Global: {
	creator = "Blend 2 Ascii Version 1";
    scene = "Scene";
}
# ------------------------------------------------------------
SceneLibrary: {
    Scene: "Scene" {
        objects =   "Player", 
                    #"B_001", 
                    "C_001", 
                    #"C_002", 
                    #"C_003", 
                    #"C_004", 
                    #"C_005", 
                    #"C_006", 
                    "Plane", 
                    "LA_001",
                    "LA_002",
                    "LA_003",
                    "LA_004",
                    ;
        zenith = 0.5, 0.5, 0.65;
        horizon = 0.6, 0.55, 0.5;
        flags = 1;
    }
}
# ------------------------------------------------------------
ObjectLibrary: {
    Object: "B_001" { data = "Plane"; location = 0, 0, 8.5;scale = 20, 20, 1; }
    Object: "C_001" { data = "SP_001"; location = 0, 0, 0.5; }
    Object: "C_006" { data = "SP_002"; location = 0, 1, 0.5; }
    Object: "C_002" { data = "CU";   location = 9.5, 9.5, 4.5; scale = 1,1,9;}
    Object: "C_003" { data = "CU";   location =-9.5, 9.5, 4.5; scale = 1,1,9;}
    Object: "C_004" { data = "CU";   location = 9.5,-9.5, 4.5; scale = 1,1,9;}
    Object: "C_005" { data = "CU";   location =-9.5,-9.5, 4.5; scale = 1,1,9;}

    Object: "Plane" {
        data = "Plane";
        location = 0, 0, -.5;
        scale = 20, 20, 1;
    }
    Object: "LA_001" {
        data = "Light";
        location = 8, 0, 4;
    }
    Object: "LA_002" {
        data = "Light1";
        location = -8, 0, 4;
    }
    Object: "LA_003" {
        data = "Light1";
        location = 0, -8, 4;
    }
    Object: "LA_004" {
        data = "Light1";
        location = 0, 3, 4;
    }

    Object: "Player" {
        data = "Camera";
        location = 0, -5, 1;
        rotation = 0, 0, .75;
    }
}
# ------------------------------------------------------------
CameraLibrary: {
    Camera: "Camera" {
        interactive = 1;
        clip = 0.1, 1000;
        fov  = 65;
    }
}

# ------------------------------------------------------------
ShapeLibrary: {
    Sphere: "SP_001" {
        radius = .35;
        material = "Green";
    }
    Sphere: "SP_002" {
        radius = .292125;
        material = "Red";
    }
    Cube: "CU" {
        extent = 1;
        material = "Blue";
    }
    Cube: "Plane" {
        extent   = 1;
        material = "Blue";
    }
}

LightLibrary:{ 
    Light: "Light" {
        power     = 24;
        radius    = 0.1;

    }
    Light: "Light1" {
        color     = 0,1,0;
        power     = 160;
        radius    = 0.15;
