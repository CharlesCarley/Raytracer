 Global: {
    scene = "Scene";
}

SceneLibrary: {
    Scene: "Scene" {
        objects = "CameraObject",
                    "Ob.1",
                    "L.1",  "L.2";
        zenith  = 0.75, 0.75, 0.75;
        horizon = 0.6, 0.6, 0.6;

        # 1  = RM_COLOR_AND_LIGHT
        # 2  = RM_DISTANCE
        # 4  = RM_COMPUTED_NORMAL
        # 8  = RM_DEBUG_TILE
        # 16 = RM_OUTLINE
        # 32 = RM_INVERT
        # 64 = RM_AA

        flags = 1;
    }
}

ShapeLibrary: {
    Sphere: "S.1" {
        radius = .5;
        material = "Red";
    }
}

ObjectLibrary: {
    Object: "CameraObject" {
        data     = "CameraData";
        location = 0, -5, 1;
    }
    Object: "L.1" { data = "Light"; location = 0, 0, 13;}
    Object: "L.2" { data = "Light"; location = 0, -100, 13;}

    Object: "Ob.1" {
        data     = "S.1";
    }
}

CameraLibrary: {
    Camera: "CameraData" {
        interactive = 1;
        clip = 0,1;
    }
}

LightLibrary:{ 
    Light: "Light" {
        power     = 120;
        decay     = 0.2;
        elevation = .5;

    }
}

MaterialLibrary: {
    Material: "Blue" {
        flags    = 1;
        color    = .2,.2,1;
        specular = 0;
        hardness = 0;
    }
    Material: "Green" {
        flags    = 1;
        color    = .9,1,.8;
        ambient = 0.9;
        diffuse = .8;
        specular = 0;
        hardness = 55;
    }
    Material: "Red" {
        flags    = 1;
        color    = 1,.2,.2;
        ambient = .5;
        diffuse = 1;
        specular = .9;
        hardness = 120;
    }
}
