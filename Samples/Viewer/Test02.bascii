 Global: {
    scene = "Scene";
}

SceneLibrary: {
    Scene: "Scene" {
        objects = "CameraObject",
                    "Ob.1",
                    "Ob.2",
                    "Ob.3",
                    "Ob.4",
                    "Ob.5",
                    "Ob.6",
                    "L.1",  "L.2";
        zenith  = 0.25, 0.3, 0.3;
        horizon = 0.05, 0.05, 0.05;

        # 1  = RM_COLOR_AND_LIGHT
        # 2  = RM_DISTANCE
        # 4  = RM_COMPUTED_NORMAL
        # 8  = RM_DEBUG_TILE
        # 16 = RM_OUTLINE
        # 32 = RM_INVERT

        flags = 1;
    }
}

ShapeLibrary: {
    Cube: "C.1" {
        extent   = 1;
        material = "Green";
    }
    Sphere: "C.2" {
        radius = .25;
        material = "Red";
    }
    Sphere: "C.3" {
        radius = .25;
        material = "Blue";
    }
    Sphere: "C.4" {
        radius = .25;
        material = "Yellow";
    }
    Sphere: "C.5" {
        radius = .25;
        material = "Black";
    }
    Plane: "C.6" {
        point    = 0,0,0;
        normal   = 0,0,1;
        material = "Green";
    }
}

ObjectLibrary: {
    Object: "CameraObject" {
        data     = "CameraData";
        location = 0, -5, 1;
    }
    Object: "L.1" { data = "Light"; location = 0, 0, 13;}
    Object: "L.2" { data = "Light"; location = 0, -100, 25;}

    Object: "Ob.1" { data = "C.6"; location = 0, 0, 0;}
    Object: "Ob.2" { data = "C.5"; location = 0, -5, .5; }
    Object: "Ob.3" { data = "C.2"; location = 0, 0, .5; }
    Object: "Ob.4" { data = "C.3"; location = 0, 5, .5; }
    Object: "Ob.5" { data = "C.2"; location = -1, 1, .5; }
    Object: "Ob.6" { data = "C.4"; location =  1, 1, .5; }
}

CameraLibrary: {
    Camera: "CameraData" {
        interactive = 1;

    }
}

LightLibrary:{ 
